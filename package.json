{
  "name": "react-css-context",
  "version": "0.0.2",
  "description": "Async Loading CSS file in our React Application.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "lint": "tslint -p tsconfig.json",
    "test-node": "ava ./lib/**/*.node.test.js -v",
    "test-browser": "BROWSER_ENV=true ava ./lib/**/*.browser.test.js -v",
    "test": "npm run build && npm run lint && npm run test-node && npm run test-browser"
  },
  "keywords": [
    "react",
    "css",
    "isomorphic",
    "universal"
  ],
  "ava": {
    "require": [
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "author": "ryo_suga <ryo.suga.dev@gmail.com> (http://banseivlog.hatenablog.jp/)",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "ava": "^0.25.0",
    "browser-env": "^3.2.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
